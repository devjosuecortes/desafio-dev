<% if flash[:alert] || flash[:notice] || flash[:error] %>
  <div id="flash-message" 
    class="max-w-md mx-auto my-4 p-3 text-center rounded shadow-md relative 
      <% if flash[:alert] || flash[:error] %> bg-red-100 text-red-700 border border-red-400 <% end %> 
      <% if flash[:notice] %> bg-green-100 text-green-700 border border-green-400 <% end %>">
    <span id="flash-text">
      <%= flash[:alert] || flash[:notice] || flash[:error] %>
    </span>

    <button onclick="closeFlash()" class="absolute top-1 right-2 text-lg font-bold text-gray-600 hover:text-black">&times;</button>
  </div>
<% end %>